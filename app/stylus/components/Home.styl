[data-component='Home'] {
  position: relative;
	height: 100%;
	width: 100%;

  > .container {
    width: 60%;
    padding: 8% 0 0;
    margin: auto;

    > .room-list {
      position: relative;
      z-index: 1;
      background: #FFFFFF;
      max-width: 50%;
      margin: 0 auto 100px;
      padding: 5%;
      text-align: center;
      box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);

      & ul {
        padding: 5%;
        display: block;

        & li {
          padding: 2%;

        }
      }
    }

    > .new-room {
      position: relative;
      z-index: 1;
      background: #FFFFFF;
      max-width: 50%;
      margin: 0 auto 100px;
      padding: 5%;
      text-align: center;
      box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);


    }
  }

  > .room-logout-wrapper {
		pointer-events: none;
		position: absolute;
		z-index: 1;
		top: 0;
		left: 0;
		right: 0;
		display: flex;
		flex-direction: row;
		justify-content: right;

		> .room-logout {
			width: auto;
			background-color: $COLOR_BG_1;
			border-bottom-right-radius: 4px;
			border-bottom-left-radius: 4px;
			box-shadow: 0px 3px 12px 2px rgba(#111, 0.4);

			> a.link {
				display: block;;
				user-select: none;
				pointer-events: auto;
				text-transform: uppercase;
				font-family: 'Roboto';
				font-weight: 400;
				color: rgba(#fff, 0.75);
				cursor: pointer;
				text-decoration: none;
				transition-property: color;
				transition-duration: 0.1s;

				+desktop() {
					padding: 10px 20px;
					font-size: 12px;
				}

				+mobile() {
					padding: 6px 10px;
					font-size: 10px;
				}

				&:hover {
					color: #fff;
					text-decoration: underline;
				}
			}
		}
	}
}
