[data-component='Home'] {
  position: relative;
	height: 100%;
	width: 100%;

  > .container {
    width: 60%;
    padding: 8% 0 0;
    margin: auto;

    +mobile() {
      width : 80%;
    }

    > .room-list {
      position: relative;
      z-index: 1;
      background: #FFFFFF;
      box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
      font-size: 1em;

      +desktop() {
        max-width: 50%;
        margin: 0 auto 20%;
        padding: 10px 20px;
      }

      +mobile() {
        max-width: 100%;
        margin: 5% auto 20%;
        padding: 6px 10px;
      }

      & ul {
        padding: 2%;
        list-style-type: none;
        display: block;

        & li {
          padding: 2% 4%;
          background-color: #EEEEEE;
          border: 1px solid #DDDDDD;
          margin : 1%;

          & a {
            text-decoration: none;

            &:link, &:visited{
              color: #2B2B2B;
            }
            &:hover {
              color:#096199;
            }
          }
        }
      }
    }

    > .new-room {
      position: relative;
      z-index: 1;
      background: #FFFFFF;
      text-align: center;
      box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);

      +desktop() {
        max-width: 50%;
        margin: 0 auto 20%;
        padding: 10px 20px;
        font-size: 1em;

          & input {
            margin: 5%;
            max-width: 100%;
            border: none;
            border-bottom: 2px solid;
          }

          & button {
            max-width: 100%;
          }
      }

      +mobile() {
        max-width: 100%;
        margin: 0 auto 20%;
        padding: 6px 10px;
        font-size: 1em;

        & input {
          margin: 15% 2% 5%;
          max-width: 90%;
          border: none;
          border-bottom: 2px solid;
        }

        & button {
          margin: 5% 2% 5%;
          width: 90%;
        }
      }


    }
  }

  > .room-logout-wrapper {
		pointer-events: none;
		position: absolute;
		z-index: 1;
		top: 0;
		left: 0;
		right: 0;
		display: flex;
		flex-direction: row;
		justify-content: right;

		> .room-logout {
			width: auto;
			background-color: $COLOR_BG_1;
			border-bottom-right-radius: 4px;
			border-bottom-left-radius: 4px;
			box-shadow: 0px 3px 12px 2px rgba(#111, 0.4);

			> a.link {
				display: block;;
				user-select: none;
				pointer-events: auto;
				text-transform: uppercase;
				font-family: 'Roboto';
				font-weight: 400;
				color: rgba(#fff, 0.75);
				cursor: pointer;
				text-decoration: none;
				transition-property: color;
				transition-duration: 0.1s;

				+desktop() {
					padding: 10px 20px;
					font-size: 12px;
				}

				+mobile() {
					padding: 6px 10px;
					font-size: 10px;
				}

				&:hover {
					color: #fff;
					text-decoration: underline;
				}
			}
		}
	}
}
